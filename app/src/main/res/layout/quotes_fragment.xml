<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quotes_layout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="This is a quote. It is very inspirational and I hope you feel good."
            android:layout_marginTop="250dp"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="@color/titleTextColor"
            android:id="@+id/quote_text_view"
            android:shadowColor="#000000"
            android:shadowRadius="1.6"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:textStyle="italic"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Speaker McSpeaker"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="@color/titleTextColor"
            android:id="@+id/speaker_text_view"
            android:shadowColor="#000000"
            android:shadowRadius="1.6"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_below="@+id/quote_text_view"
            android:textStyle="italic"
            android:textAlignment="center"
            />



</RelativeLayout>
