<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/midnightBlue</item>
        <item name="colorPrimaryDark">@color/signBlue</item>
        <item name="colorAccent">@color/slateGray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/crimson</item>
        <item name="colorSwitchThumbNormal">@color/slateGray</item>
        <item name="android:colorForeground">@color/titleTextColor</item>
    </style>


</resources>
