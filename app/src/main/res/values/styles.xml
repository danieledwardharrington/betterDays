<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/midnightBlue</item>
        <item name="colorPrimaryDark">@color/signBlue</item>
        <item name="colorAccent">@color/crimson</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:textColorSecondary">@color/titleTextColor</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
        <item name="android:listDivider">@color/orangeRed</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="textColorAlertDialogListItem">@color/titleTextColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:listDivider">@color/orangeRed</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="textColorAlertDialogListItem">@color/titleTextColor</item>
    </style>

    <style name="AlertDialogStyle" parent="AlertDialog.AppCompat">
        <item name="colorPrimary">@color/midnightBlue</item>
        <item name="colorPrimaryDark">@color/signBlue</item>
        <item name="colorAccent">@color/crimson</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:background">@color/signBlue</item>
        <item name="android:popupBackground">@color/signBlue</item>
        <item name="android:windowBackground">@color/signBlue</item>
        <item name="android:itemBackground">@color/signBlue</item>
        <item name="android:textColorSecondary">@color/titleTextColor</item>
    </style>

</resources>
